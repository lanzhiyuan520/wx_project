@import "../template/footer.wxss";
.contain{
  padding: 170rpx 115rpx 0;
}
.section{
  position: relative;
}
.phone,.code{
  border-bottom: 1rpx solid #e8e8e8;
  padding: 0 0 30rpx 165rpx;
}
.phone-titles{
  position: absolute;
}
.text-gray{
  color: #b0b0b0
}
.mb-60{
  margin-bottom: 60rpx;
}
.mb-30{
  margin-bottom: 30rpx;
}
.code-btn{
  position: absolute;
  right: 0;
  bottom: 20rpx;
  width: 160rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
}
.code{
  padding-right: 160rpx;
}
.sub-btn{
  width: 100%;
  height: 85rpx;
  background: linear-gradient(to right, #ff85a9 , #ffa189);
  border-radius: 20rpx;
  text-align: center;
  line-height: 85rpx;
  color: #ffffff;
  margin-top: 58rpx;
  box-shadow: -2px 3px 10px 5px #fddad5;
}
.deep-gray-color{
  color: #878686
}
button::after{
  border: none;
}