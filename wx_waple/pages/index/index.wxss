.banner_wrap{
    width: 100%;
    height: 300rpx;
    background-color: pink;
}
.server_nav{
    width: 100%;
    height: 200rpx;
    display: flex;
}
.server_nav_img image{
    width: 98rpx;
    height: 98rpx;
    margin-top: 30rpx;
}
.server_nav_img{
    display: flex;
    flex-direction: column;
}
.server_item{
    width: 33.333%;
    height: 100%;
    display: flex;
    justify-content: center;
}
.yuesao_text{
    color: #000;
    font-size: 26rpx;
    margin-top: 10rpx;
}
.leval{
    width: 100%;
    height: 12rpx;
    background-color: #fff5f9;
}
.waiter_recommend{
    width: 100%;
}
.waiter_recommend_title{
    box-sizing: border-box;
    padding: 31rpx 44rpx 0;
    display: flex;
    justify-content: space-between;
}
.title_text{
    font-size: 34rpx;
    color: #000;
}
.more{
    font-size: 24rpx;
    color: #545454;
}
.waiter_list{
    padding-top: 34rpx;
    padding-bottom: 31rpx;
}
.waiter_item{
    width: 213rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin-right: 48rpx;
    display: inline-block;
    text-align: center;
    margin-top: 10rpx;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
}
.first_list{
    margin-left: 67rpx;
}
.waiter_content image{
    padding-top: 25rpx;
    display: inline-block;
    width: 138rpx;
    height: 138rpx;
    border-radius: 50%;
}
.waiter_content{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.waiter_name{
    font-size: 28rpx;
    padding:15rpx 0;
}
.leval2{
    width: 60rpx;
    height: 4rpx;
    background: linear-gradient(#ff957a,#ff779e);
}
.price{
    font-size: 26rpx;
    padding-top: 17rpx;
    padding-bottom: 40rpx;
}
.comment_title{
    box-sizing: border-box;
    padding-top: 30rpx;
    padding-left: 44rpx;
}
.comment_list{
    width: 100%;
    height: 452rpx;
    box-sizing: border-box;
    padding: 0 44rpx;
}
.comment_item{
    margin-top: 40rpx;
    box-sizing: border-box;
    padding: 22rpx 23rpx 0;
    width: 100%;
    background-color: #fff;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
    border-radius: 10rpx;
}
.user_info{
    width: 100%;
    height: 80rpx;
    display: flex;
}
.user_head image{
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
}
.user_head{
    width: 15%;
}
.info{
    position: relative;
    width: 85%;
    height: 100%;
    box-sizing: border-box;
    padding-left: 30rpx;
}
.comment_star{
    margin-top: 8rpx;
    display: flex;
}
.user_name{
    font-size: 30rpx;
}
.star{
    display: flex;
}
.star image{
    width: 21rpx;
    height: 21rpx;
    margin-right: 14rpx;
    display: block;
}
.time{
    position: absolute;
    bottom: 20rpx;
    right: 0;
    height: 24rpx;
}
.comment_content{
    margin-top: 15rpx;
}
.comment_text_content{
    font-size: 28rpx;
}
.comment_text{
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
}
.comment_img{
    padding-top: 12rpx;
}
.comment_img image{
    width: 150rpx;
    height: 115rpx;
    border-radius: 10rpx;
    margin-right: 40rpx;
}
.waiter_user{
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    padding:0 23rpx;
    display: flex;
}
.waiter_head{
    height: 100%;
    display: flex;
    align-items: center;
}
.waiter_head image{
    width: 55rpx;
    height: 55rpx;
    border-radius: 50%;
    display: block;
}
.waiter_name{
    display: flex;
    align-items: center;
    margin-left: 23rpx;
}