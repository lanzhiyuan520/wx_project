.banner_wrap{
    width: 100%;
    height: 300rpx;
    background-color: pink;
    position: relative;
}
.banner_wrap image{
    height: 100%;
    width: 100%;
}
.city-wrap{
    width: 107rpx;
    height: 47rpx;
    position: absolute;
    top: 21rpx;
    left: 34rpx;
    background-color: #fff8f1;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
}
.city-wrap image{
    display: block;
    width: 22rpx;
    height: 22rpx;
    margin: 0 11rpx;
}
.city-wrap text{
    font-size: 24rpx;
    color: #545454;
}
.city-list{
    width: 107rpx;
    position: absolute;
    top: 36rpx;
    left: 0;
    display: flex;
    flex-direction: column;
    background-color:#fff8f1 ;
    border-radius: 10rpx;
    box-sizing: border-box;
    transition: all .5s linear;
}
.city-list text{
    display: flex;
    justify-content: flex-end;
    width: 100%;
    font-size: 24rpx;
    color: #545454;
    padding: 8rpx 0;
    margin-bottom: 15rpx;
    padding-right: 20rpx;
    box-sizing: border-box;
}
.select-city{
    background-color: #fff;
}
.first-city{
    margin-top: 20rpx;
}
.last-city{
    margin-bottom: 10rpx!important;
}
.server_nav{
    width: 100%;
    height: 200rpx;
    display: flex;
}
.server_nav_img image{
    width: 98rpx;
    height: 98rpx;
    margin-top: 30rpx;
}
.server_nav_img{
    display: flex;
    flex-direction: column;
}
.server_item{
    width: 33.333%;
    height: 100%;
    display: flex;
    justify-content: center;
}
.yuesao_text{
    font-size: 26rpx;
    margin-top: 10rpx;
}
.leval{
    width: 100%;
    height: 12rpx;
    background-color: #fff5f9;
}
.waiter_recommend{
    width: 100%;
}
.waiter_recommend_title{
    box-sizing: border-box;
    padding: 31rpx 44rpx 0;
    display: flex;
    justify-content: space-between;
}
.title_text{
    font-size: 34rpx;
    color: #000;
}
.more{
    font-size: 24rpx;
    color: #545454;
}
.waiter_list{
    padding-top: 34rpx;
    padding-bottom: 31rpx;
}
.comment_title{
    box-sizing: border-box;
    padding-top: 30rpx;
    padding-left: 44rpx;
}
.comment_list{
    width: 100%;
    height: 452rpx;
    box-sizing: border-box;
    padding: 0 44rpx;
}
.comment_item{
    margin-top: 40rpx;
    box-sizing: border-box;
    padding: 22rpx 23rpx 0;
    width: 100%;
    background-color: #fff;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
    border-radius: 10rpx;
}
.user_info{
    width: 100%;
    height: 80rpx;
    display: flex;
}
.user_head image{
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
}
.user_head{
    width: 15%;
}
.info{
    position: relative;
    width: 85%;
    height: 100%;
    box-sizing: border-box;
    padding-left: 30rpx;
}
.comment_star{
    margin-top: 8rpx;
    display: flex;
}
.user_name{
    font-size: 30rpx;
}
.star{
    display: flex;
}
.star image{
    width: 21rpx;
    height: 21rpx;
    margin-right: 14rpx;
    display: block;
}
.time{
    position: absolute;
    bottom: 20rpx;
    right: 0;
    height: 24rpx;
}
.comment_content{
    margin-top: 15rpx;
}
.comment_text_content{
    font-size: 28rpx;
}
.comment_text{
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis;
}
.comment_img{
    padding-top: 12rpx;
}
.comment_img image{
    width: 150rpx;
    height: 115rpx;
    border-radius: 10rpx;
    margin-right: 40rpx;
}
.waiter_user{
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    padding:0 23rpx;
    display: flex;
}
.waiter_head{
    height: 100%;
    display: flex;
    align-items: center;
}
.waiter_head image{
    width: 55rpx;
    height: 55rpx;
    border-radius: 50%;
    display: block;
}
.waiter_nicname{
    display: flex;
    align-items: center;
    margin-left: 23rpx;
}
.waiter_price{
    height: 100%;
    display: flex;
    align-items: center;
    margin-left: 93rpx;
}
.waiter_price text{
    font-size: 24rpx;
}
.arrow_right image{
    display: block;
    width: 20rpx;
    height: 32rpx;
}
.arrow_right{
    position: absolute;
    right: 44rpx;
    top: 50%;
    margin-top: -16rpx;
}
.service{
    position: fixed;
    bottom: 171rpx;
    right: 27rpx;
    width: 94rpx;
    height: 94rpx;
    border-radius: 50%;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
}
.service image{
    display: block;
    width: 56rpx;
    height: 52rpx;
}
.pull{
    text-align: center;
    font-size: 24rpx;
    color: #8b9191;
    padding-bottom: 40rpx;
    padding-top: 20rpx;
}