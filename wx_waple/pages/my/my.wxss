/*登录  */
.contain{
  /*padding: 170rpx 115rpx 0;*/
}
.section{
  position: relative;
}
.phone,.code{
  border-bottom: 1rpx solid #e8e8e8;
  padding: 0 0 30rpx 165rpx;
}
.phone-titles{
  position: absolute;
}
.text-gray{
  color: #b0b0b0
}
.mb-60{
  margin-bottom: 60rpx;
}
.mb-30{
  margin-bottom: 30rpx;
}
.code-btn{
  position: absolute;
  right: 0;
  bottom: 20rpx;
  width: 160rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
}
.code{
  padding-right: 160rpx;
}
.sub-btn{
  width: 100%;
  height: 85rpx;
  background: linear-gradient(to right, #ff85a9 , #ffa189);
  border-radius: 20rpx;
  text-align: center;
  line-height: 85rpx;
  color: #ffffff;
  margin-top: 58rpx;
  box-shadow: -2px 3px 10px 1px #fddad5;
}
.deep-gray-color{
  color: #878686
}
button::after{
  border: none;
}
/*个人中心  */
.head-img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
}
.person-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0 57rpx;
}
.list-item{
  display: flex;
  flex: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #e9e9e9;
  height: 133rpx;
  align-items: center;
}
.arr-pic{
  width: 20rpx;
  height: 33rpx;
  margin-left: 50rpx;
}
.wechat_login{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 185rpx;
}
.level{
  width: 84rpx;
  height: 0;
  border-bottom: 1rpx solid #808080;
}
.login-text{
  font-size: 20rpx;
  color: #808080;
  font-family: "PingFang SC";
  margin: 0 26rpx;
}
.wechat_btn{
  width: 122rpx;
  height: 122rpx;
  background-color: #fff;
  border: none;
  padding: 0;
  margin-bottom:10rpx;
}
.wechat_icon{
  margin-top: 20rpx;
  text-align: center;
}
.wechat_btn::after{
  border: none;
  border-radius: 0;
}
.wechat_btn image{
    width: 122rpx;
    height: 122rpx;
}
.wechat_text{
  color: #808080;
  font-size: 24rpx;
  padding-top: 20rpx;
}
.reduced-wrap{
  width: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}
.reduced-model{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -180rpx;
  margin-left: -220rpx;
  width: 446rpx;
  height: 364rpx;
  background: url("http://cdn.ayi800.com/image/png/xiaochengxu_reduced_modelbg@2x.png") no-repeat;
  background-size: 100%;
}
.reduced-text{
  display: flex;
  margin-top: 177rpx;
  justify-content: center;
}
.reduced-price{
  color: #ff7683;
  font-size: 36rpx;
}
.login-banner{
  /*margin-top: 40rpx;*/
}
.login-banner image{
  width: 100%;
  height: 341rpx;
}
.wechat_login_btn{
  width: 538rpx;
  height: 87rpx;
  border-radius: 15rpx;
  background: linear-gradient(to right,#ff6794,#ff8a6c);
  margin: 0 auto;
  text-align: center;
  line-height: 87rpx;
  color: #fff;
  font-size: 32rpx;
  margin-top: 70rpx;
  box-shadow: -2px 3px 10px 3px #fddad5;
  font-family: "PingFangSC-Light";
}
.waiter-reduced{
  color: #000;
  font-size: 36rpx;
}
.go-reduced{
  width: 290rpx;
  height: 66rpx;
   background: linear-gradient(to right,#ff6794,#ff8a6c);
  border-radius: 50rpx;
  margin: 0 auto;
  text-align: center;
  line-height: 66rpx;
  color: #fff;
  margin-top: 44rpx;
  font-size: 26rpx;
}
.close{
  position: absolute;
  top: 13rpx;
  right: 16rpx;
}
.close image{
  width: 45rpx;
  height: 45rpx;
}