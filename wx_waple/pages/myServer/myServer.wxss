@import "../template/footer.wxss";
.server-item{
  width: 670rpx;
  height: 285rpx;
  box-shadow: -2px 5px 12px 5px #f7f7f7;
  border-radius: 20rpx;
  padding: 50rpx 60rpx 0;
  box-sizing: border-box;
  position: relative;
  margin-bottom: 45rpx;
}
.pt-35{
  padding-top: 35rpx;
}
.server-item-top{
  border-bottom: 2rpx solid #e9e9e9;
  padding: 0 10rpx 55rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}
 .server-bottom{
  width: 50%;
  text-align: center;
  line-height: 103rpx;
} 
.right-border{
  border-right: 2rpx solid #e9e9e9;
  box-sizing: border-box;
}
.arr-pic{
  width: 20rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -16rpx;
}