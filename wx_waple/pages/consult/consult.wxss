.wrap{
    height: 110rpx;
    width: 100%;
    z-index: 99;
    display: flex;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
    position: fixed;
    bottom: 0;
}
.left{
    height: 100%;
    width: 35%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}
.right{
    height: 100%;
    width: 65%;
    background: linear-gradient(to right,#ff6794,#ff8a6c);
    display: flex;
    justify-content: center;
    align-items: center;
}
.content{
    display: flex;
    align-items: center;
}
.content image{
    width: 50rpx;
    height: 35rpx;
    margin-right: 16rpx;
}
.content text{
    font-size: 30rpx;
    background: linear-gradient(to right,#ff6794,#ff8a6c);
    -webkit-background-clip: text;
    color: transparent;
}
.right text{
    font-size: 30rpx;
    color: #fff;
}
.order-model{
    position: fixed;
    bottom: 0;
    z-index: 1000;
    width: 100%;
    height: 610rpx;
    background-color: #fff;
}
.waiter-name{
    padding-left: 40rpx;
    padding-top: 56rpx;
}
.waiter-name text{

    font-size: 32rpx;
    color: #353535;
}