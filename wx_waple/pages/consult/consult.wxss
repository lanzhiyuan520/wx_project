.wrap{
    height: 110rpx;
    width: 100%;
    z-index: 99;
    display: flex;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
    position: fixed;
    bottom: 0;
}
.left{
    height: 100%;
    width: 35%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}
.right{
    height: 100%;
    width: 65%;
    background: linear-gradient(to right,#ff85ac,#ffa289);
    display: flex;
    justify-content: center;
    align-items: center;
}
.content{
    display: flex;
    align-items: center;
}
.content image{
    width: 46rpx;
    height: 39rpx;
    margin-right: 16rpx;
}
.content text{
    font-size: 30rpx;
    background: linear-gradient(to right,#ff6794,#ff8a6c);
    -webkit-background-clip: text;
    color: transparent;
}
.right text{
    font-size: 30rpx;
    color: #fff;
}
.order-model{
    position: fixed;
    bottom: 0;
    z-index: 1000;
    width: 100%;
    height: 610rpx;
    background-color: #fff;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
}
.waiter-name{
    position: relative;
    padding-left: 40rpx;
    padding-top: 56rpx;
}
.close image{
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    width: 45rpx;
    height: 45rpx;
}
.waiter-name text{
    font-size: 32rpx;
    color: #353535;
}
.input-icon{
    display: flex;
    align-items: center;
}
.input-icon image{
    padding-top:38rpx;
    padding-left: 24rpx;
}
.icon1 image{
    width: 40rpx;
    height: 38rpx;
}
.icon2 image{
    width: 40rpx;
    height: 41rpx;
}
.icon3 image{
    width: 32rpx;
    height: 45rpx;
}
.input-text{
    width: 520rpx;
    height: 116rpx;
    border-bottom: 1px solid #e9e9e9;
    display: flex;
}
.input-wrap{
    display: flex;
    justify-content: center;
}
.time{
    height: 100%;
    padding-left: 54rpx;
    padding-top:24rpx;
}
.pla{
    font-size: 30rpx;
    color: #b1b1b1;
}
.submit{
    width: 267rpx;
    height: 75rpx;
    background: linear-gradient(to right,#ff85ac,#ffa289);
    border-radius: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 43rpx auto 0;
}
.submit text{
    font-size: 32rpx;
    color: #fff;
}
.order-success {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 9999;
}
.success-model{
    width: 450rpx;
    background-color: #fff;
    border-radius: 20rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -225rpx;
    margin-left: -201rpx;
    padding-bottom: 30rpx;
}
.success-icon{
    display: flex;
    justify-content: center;
    padding-top: 54rpx;
    padding-bottom: 23rpx;
}
.success-icon image{
    width: 50rpx;
    height: 50rpx;
}
.success-text{
    text-align: center;
}
.success-text text{
    font-family: 'PingFangSC-Medium';
    font-size: 32rpx;
    color: #353535;
}
.inform{
    box-sizing: border-box;
    padding: 0 59rpx 30rpx 56rpx;
}
.inform text{
    font-size: 28rpx;
    color: #353535;
}
.know{
    width: 230rpx;
    height: 55rpx;
    border-radius: 10rpx;
    background: linear-gradient(to right,#ff85ac,#ffa289);
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
}
.know text{
    font-size: 28rpx;
    color: #fff;
}
.user_info{
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    transition: all .5s linear;
}
.btn{
    width: 100%;
    height: 100%;
    background-color: #fff;
    border: none;
    display: flex;
    justify-content: center;
    align-items: center;
}
.btn::after{
    border: none;
}