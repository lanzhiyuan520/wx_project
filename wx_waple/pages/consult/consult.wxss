.wrap{
    height: 110rpx;
    width: 100%;
    z-index: 99;
    display: flex;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
    position: fixed;
    bottom: 0;
}
.left{
    height: 100%;
    width: 35%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}
.right{
    height: 100%;
    width: 65%;
    background: linear-gradient(to right,#ff6794,#ff8a6c);
    display: flex;
    justify-content: center;
    align-items: center;
}
.content{
    display: flex;
    align-items: center;
}
.content image{
    width: 50rpx;
    height: 35rpx;
    margin-right: 16rpx;
}
.content text{
    font-size: 30rpx;
    background: linear-gradient(to right,#ff6794,#ff8a6c);
    -webkit-background-clip: text;
    color: transparent;
}
.right text{
    font-size: 30rpx;
    color: #fff;
}
.order-model{
    position: fixed;
    bottom: 0;
    z-index: 1000;
    width: 100%;
    height: 610rpx;
    background-color: #fff;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
}
.waiter-name{
    position: relative;
    padding-left: 40rpx;
    padding-top: 56rpx;
}
.close image{
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    width: 45rpx;
    height: 45rpx;
}
.waiter-name text{
    font-size: 32rpx;
    color: #353535;
}
.input-icon{
    display: flex;
    align-items: center;
}
.input-icon image{
    width: 42rpx;
    height: 42rpx;
    padding-top:38rpx;
}
.input-text{
    width: 520rpx;
    height: 116rpx;
    border-bottom: 1px solid #e9e9e9;
    display: flex;
}
.input-wrap{
    display: flex;
    justify-content: center;
}
.time{
    height: 100%;
    padding-left: 54rpx;
    padding-top:24rpx;

}
.pla{
    font-size: 30rpx;
    color: #b1b1b1;
}
.submit{
    width: 267rpx;
    height: 75rpx;
    background: linear-gradient(to right,#ff6797,#ff8b6b);
    border-radius: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 43rpx auto 0;
}
.submit text{
    font-size: 32rpx;
    color: #fff;
}