.banner image{
    width: 100%;
    height: 300rpx;
}
.service_img image{
    display: block;
    width: 120rpx;
    height: 90rpx;
    padding: 45rpx 60rpx 45rpx 40rpx;
}
.service_content{
    width: auto;
    box-sizing: border-box;
    padding-right: 40rpx;
}
.service_item{
    display: flex;
}
.service_title{
    padding-top: 30rpx;
}
.service_title text{
    font-size: 28rpx;
}
.service_text{
    line-height: 38rpx;
}
.service_text text{
    font-size: 24rpx;
}
.button{
    width: 268rpx;
    height: 72rpx;
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 0 5rpx #f7614a ;
    background: linear-gradient(to right,#ff85a9,#ffa189);
}
.button text{
    font-size: 30rpx;
    color: #fff;
}
.btn_wrap{
    display: flex;
    margin-top: 40rpx;
}
.ipone{
    margin: 0 70rpx 0 74rpx;
}