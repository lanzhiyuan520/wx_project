.font_ping{
    font-family: "PingFang SC";
}
/*月嫂列表公共*/
.waiter_item{
    width: 213rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin-right: 48rpx;
    display: inline-block;
    text-align: center;
    margin-top: 10rpx;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
}
.waiter_content image{
    padding-top: 25rpx;
    display: inline-block;
    width: 138rpx;
    height: 138rpx;
    border-radius: 50%;
}
.waiter_content{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.leval2{
    width: 60rpx;
    height: 4rpx;
    background: linear-gradient(#ff957a,#ff779e);
}
.price{
    font-size: 26rpx;
    padding-top: 17rpx;
    padding-bottom: 40rpx;
}
/*底部预约公共*/
.wrap{
    height: 110rpx;
    display: flex;
    box-shadow: 0 0 20rpx rgba(0,0,0,.1) ;
}
.left{
    height: 100%;
    width: 35%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.right{
    height: 100%;
    width: 65%;
    background: linear-gradient(to right,#ff6794,#ff8a6c);
    display: flex;
    justify-content: center;
    align-items: center;
}
.content{
    display: flex;
    align-items: center;
}
.content image{
    width: 50rpx;
    height: 35rpx;
    margin-right: 16rpx;
}
.content text{
    font-size: 30rpx;
    background: linear-gradient(to right,#ff6794,#ff8a6c);
    -webkit-background-clip: text;
    color: transparent;
}
.right text{
    font-size: 30rpx;
    color: #fff;
}