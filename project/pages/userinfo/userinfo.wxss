.header-wrap{
  width: 100%;
  padding: 0 10px;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.header-content{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
} 
.user-avatar image{
  display: block;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.user-avatar{
  padding: 30rpx 0;
}
.content{
  padding-left: 10px;
  box-sizing: border-box;
  display: flex;
}
.birth{
  display: flex;
  align-items: center;
  margin-left: 23rpx;
}
.birth-text{
  font-size: 16px;
}
.birth-days{
  font-size: 16px;
  color: #ff6666;
}
.name{
  margin-right: 5px;
}
.sports-suggest-wrap{
  width: 100%;
  padding: 0 10px;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.sports-content{
  width: 100%;
  height: 100%;
}
.swiper-wrap{
  height: 100%;
}
 .wx-swiper-dots.wx-swiper-dots-horizontal{
    position: absolute;
    bottom: 40rpx;
}
.play-content{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.today-sports text{
  font-size: 12px;
}
.today-sports{
    text-align: center;
    line-height: 12px;
     margin-top: 30px; 
}
.walk-num{
  text-align: center;
  line-height: 24px;
  margin-top: 20px;
  margin-bottom: 15px;
}
.num{
  font-size: 24px;
  color: #ff6478;
}
.walk{
  font-size: 14px;
  color: #ff6478;
}
.suggest{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.suggest text{
  color: #797c83;
  font-size: 9px;
}
.navigator-btn{
  color: #ff6478;
  font-size: 15px;
  padding-bottom: 10px;
}
.sports-btn{
  width: 180rpx;
  height: 70rpx;
  border-radius: 30px;
  border: 1px solid #ff6478;
  line-height: 74rpx;
  text-align: center;
  margin: 25rpx 0;
}
.add-weight{
  font-size: 18px;
}
.today-knowledge-wrap{
  width: 100%;
  padding: 0 10px;
  box-sizing: border-box;
}
.today-title,.today-content{
  padding: 0 10px;
  box-sizing: border-box;
}
.today-text{
  font-size: 15px;
  color: #ff6478;
}
.today-text-content{
  line-height: 15px;
}
.today-content{
  width: 100%;
}
.knowledge-body{
  width: 100%;
  border-bottom: 1px solid #eee;
  display: flex;
}
.knowledge-body-text{
  width: 75%;
}
.knowledge-headline text{
  font-size: 30rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}
.knowledge-headline{
   padding-right: 10rpx; 
  box-sizing: border-box;
}
.knowledge-img image{
  width: 203rpx;
  height: 147rpx;
}
.learn-num text{
  font-size: 12px;
  color: #999;
  position: absolute;
  left: 0;
  bottom : 25rpx;
}
.knowledge-headline{
  padding-top: 10px;
  line-height: 36rpx;
}
.knowledge{
  display: flex;
  height: 147rpx;
  padding: 20rpx 0 25rpx 0;
  position: relative;
}

.progress_box{
 position: relative;
 width:158px;
 height: 158px; 
}
.progress_bg{
 position: absolute;
 width:158px;
 height: 158px; 
}
.progress_canvas{ 
 width:158px;
 height: 158px; 
} 
.sports,.weight{
  width: 100%;
  height: 100%;
}
.circle{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first,.last{
    width: 6px;
    height: 6px;
    border-radius: 50%;
    border: 1px solid #ff6478;
}
.first {
  margin-right: 12px;
}
.circle-active{
  background-color: #ff6478;
}

