.today-sports text{
  font-size: 12px;
}
.today-sports{
    text-align: center;
    line-height: 12px;
    /* margin-top: 60rpx; */
}
.walk-num{
  text-align: center;
  line-height: 24px;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.num{
  font-size: 24px;
  color: #ff6666;
}
.walk{
  font-size: 14px;
  color: #ff6666;
}
.suggest{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.suggest text{
  color: #797c83;
  font-size: 9px;
}
.navigator-btn{
  color: #ff6666;
  font-size: 15px;
  padding-bottom: 10px;
}
.sports-btn{
  width: 180rpx;
  height: 70rpx;
  border-radius: 30px;
  border: 1px solid #ff6666;
  line-height: 70rpx;
  text-align: center;
}
.add-weight{
  font-size: 16px;
}
.today-knowledge-wrap{
  width: 100%;
  padding: 0 10px;
  box-sizing: border-box;
}
.today-title,.today-content{
  padding: 0 10px;
  box-sizing: border-box;
}
.today-text{
  font-size: 15px;
  color: #ff6666;
}
.today-text-content{
  line-height: 15px;
}
.today-content{
  width: 100%;
}
.knowledge-body{
  width: 100%;
  border-bottom: 1px solid #eee;
  display: flex;
}
.knowledge-body-text{
  width: 75%;
}
.knowledge-headline text{
  font-size: 30rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}
.knowledge-headline{
   padding-right: 10rpx; 
  box-sizing: border-box;
}
.knowledge-img image{
  width: 203rpx;
  height: 147rpx;
}
.learn-num text{
  font-size: 12px;
  color: #999;
  position: absolute;
  left: 0;
  bottom : 25rpx;
}
.knowledge-headline{
  padding-top: 10px;
  line-height: 36rpx;
}
.knowledge{
  display: flex;
  height: 147rpx;
  padding: 20rpx 0 25rpx 0;
  position: relative;
}

.progress_box{
  width:150px;
  height: 150px; 
  margin-bottom: 30rpx;
}
.progress_canvas{ 
  width:150px;
  height: 150px; 
} 