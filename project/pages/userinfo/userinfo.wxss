.header-wrap{
  width: 100%;
  padding: 0 10px;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.header-content{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
} 
.user-avatar image{
  display: block;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}
.user-avatar{
  padding: 30rpx 0;
}
.content{
  padding-left: 10px;
  box-sizing: border-box;
  display: flex;
}
.birth{
  display: flex;
  align-items: center;
  margin-left: 23rpx;
}
.birth-text{
  font-size: 16px;
}
.birth-days{
  font-size: 16px;
  color: #ff6666;
}
.name{
  margin-right: 5px;
}
.sports-suggest-wrap{
  width: 100%;
  height: 500rpx;
  padding: 0 10px;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.sports-content{
  width: 100%;
  height: 100%;
}
.swiper-wrap{
  height: 100%;
}
 .wx-swiper-dots.wx-swiper-dots-horizontal{
    position: absolute;
    bottom: 40rpx;
}
.play-content{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.annular-wrap{
  width: 315rpx;
  height: 315rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  position: relative;
  background: radial-gradient(farthest-side at 30% 20%, #ffac91, #ff8294);
  display: flex;
  justify-content: center;
  align-items: center;
}
.raduis-small{
  position: relative;
  width: 300rpx;
  height: 300rpx;
  background-color: #fff;
  border-radius: 50%;
  padding-top: 60rpx;
  box-sizing: border-box;
}
